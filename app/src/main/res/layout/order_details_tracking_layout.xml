<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:paddingBottom="20dp"
    android:paddingTop="10dp"
    android:elevation="4dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<!--    Heading ...-->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:padding="20dp"
        android:textSize="20dp"
        android:text="Tracking Details"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/progress_dot_1"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:tint="@color/colorGreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:srcCompat="@drawable/dot_selected" />
    <ProgressBar
        android:id="@+id/progress_line_1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:progress="70"
        android:progressBackgroundTint="@color/colorGray"
        android:progressTint="@color/colorGreen"
        android:rotation="90"
        android:transformPivotY="0dp"
        app:layout_constraintStart_toStartOf="@+id/progress_dot_1"
        app:layout_constraintTop_toTopOf="@+id/progress_dot_1" />

    <ImageView
        android:id="@+id/progress_dot_2"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginTop="50dp"
        android:tint="@color/colorGray"
        app:layout_constraintEnd_toEndOf="@+id/progress_dot_1"
        app:layout_constraintStart_toStartOf="@+id/progress_dot_1"
        app:layout_constraintTop_toBottomOf="@+id/progress_dot_1"
        app:srcCompat="@drawable/dot_selected" />
    <ProgressBar
        android:id="@+id/progress_line_2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:progress="0"
        android:progressTint="@color/colorGray"
        android:progressBackgroundTint="@color/colorGray"
        android:rotation="90"
        android:transformPivotY="0dp"
        app:layout_constraintStart_toStartOf="@+id/progress_dot_2"
        app:layout_constraintTop_toTopOf="@+id/progress_dot_2"  />

    <ImageView
        android:id="@+id/progress_dot_3"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginTop="50dp"
        android:tint="@color/colorGray"
        app:layout_constraintEnd_toEndOf="@+id/progress_dot_2"
        app:layout_constraintStart_toStartOf="@+id/progress_dot_2"
        app:layout_constraintTop_toBottomOf="@+id/progress_dot_2"
        app:srcCompat="@drawable/dot_selected" />
    <ProgressBar
        android:id="@+id/progress_line_3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:progress="0"
        android:progressTint="@color/colorGray"
        android:progressBackgroundTint="@color/colorGray"
        android:rotation="90"
        android:transformPivotY="0dp"
        app:layout_constraintStart_toStartOf="@+id/progress_dot_3"
        app:layout_constraintTop_toTopOf="@+id/progress_dot_3"  />

    <ImageView
        android:id="@+id/progress_dot_4"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginTop="50dp"
        android:tint="@color/colorGray"
        app:layout_constraintEnd_toEndOf="@+id/progress_dot_3"
        app:layout_constraintStart_toStartOf="@+id/progress_dot_3"
        app:layout_constraintTop_toBottomOf="@+id/progress_dot_3"
        app:srcCompat="@drawable/dot_selected" />
    <ProgressBar
        android:id="@+id/progress_line_4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:progress="0"
        android:progressTint="@color/colorGray"
        android:progressBackgroundTint="@color/colorGray"
        android:rotation="90"
        android:transformPivotY="0dp"
        app:layout_constraintStart_toStartOf="@+id/progress_dot_4"
        app:layout_constraintTop_toTopOf="@+id/progress_dot_4"  />

    <ImageView
        android:id="@+id/progress_dot_5"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_white_btn"
        android:backgroundTint="@color/colorGray"
        android:tint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/progress_dot_4"
        app:layout_constraintStart_toStartOf="@+id/progress_dot_4"
        app:layout_constraintTop_toBottomOf="@+id/progress_dot_4"
        app:srcCompat="@drawable/ic_check_black_24dp"/>

    <!--    Track Detail - 1 -->

    <TextView
        android:id="@+id/track_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Ordered"
        android:textStyle="bold"
        android:padding="1dp"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/progress_dot_1"
        app:layout_constraintStart_toEndOf="@+id/progress_dot_1"
        app:layout_constraintTop_toTopOf="@+id/progress_dot_1" />
    <TextView
        android:id="@+id/track_date_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:text="(25 Dec. 2019, Monday)"
        android:padding="1dp"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/track_title_1"
        app:layout_constraintStart_toEndOf="@+id/track_title_1" />

    <TextView
        android:id="@+id/track_sub_title_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:padding="1dp"
        android:textSize="12sp"
        android:text="Your Order has been recieved by us"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/track_title_1"
        app:layout_constraintTop_toBottomOf="@+id/track_title_1" />

    <!--    Track Detail - 2 -->

    <TextView
        android:id="@+id/track_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Packed"
        android:textStyle="bold"
        android:padding="1dp"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/progress_dot_2"
        app:layout_constraintStart_toEndOf="@+id/progress_dot_2"
        app:layout_constraintTop_toTopOf="@+id/progress_dot_2" />
    <TextView
        android:id="@+id/track_date_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:text="(26 Dec. 2019, Tuesday)"
        android:padding="1dp"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/track_title_2"
        app:layout_constraintStart_toEndOf="@+id/track_title_2" />

    <TextView
        android:id="@+id/track_sub_title_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:padding="1dp"
        android:textSize="12sp"
        android:text="Your Order has been packed from our service."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/track_title_2"
        app:layout_constraintTop_toBottomOf="@+id/track_title_2" />

    <!--    Track Detail - 3 -->

    <TextView
        android:id="@+id/track_title_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="On Delivery"
        android:textStyle="bold"
        android:padding="1dp"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/progress_dot_3"
        app:layout_constraintStart_toEndOf="@+id/progress_dot_3"
        app:layout_constraintTop_toTopOf="@+id/progress_dot_3" />
    <TextView
        android:id="@+id/track_date_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:text="(28 Dec. 2019, Wednesday)"
        android:padding="1dp"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/track_title_3"
        app:layout_constraintStart_toEndOf="@+id/track_title_3" />

    <TextView
        android:id="@+id/track_sub_title_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:padding="1dp"
        android:textSize="12sp"
        android:text="Reach at Bhopal Airport."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/track_title_3"
        app:layout_constraintTop_toBottomOf="@+id/track_title_3" />

    <!--    Track Detail - 4 -->

    <TextView
        android:id="@+id/track_title_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Out For Delivery"
        android:textStyle="bold"
        android:padding="1dp"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/progress_dot_4"
        app:layout_constraintStart_toEndOf="@+id/progress_dot_4"
        app:layout_constraintTop_toTopOf="@+id/progress_dot_4" />
    <TextView
        android:id="@+id/track_date_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:text="(29 Dec. 2019, Friday)"
        android:padding="1dp"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/track_title_4"
        app:layout_constraintStart_toEndOf="@+id/track_title_4" />

    <TextView
        android:id="@+id/track_sub_title_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:padding="1dp"
        android:textSize="12sp"
        android:text="Your Order out for Delivery... Please ready for pickup today."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/track_title_4"
        app:layout_constraintTop_toBottomOf="@+id/track_title_4" />

    <!--    Track Detail - 5 -->

    <TextView
        android:id="@+id/track_title_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Delivered"
        android:textStyle="bold"
        android:padding="1dp"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/progress_dot_5"
        app:layout_constraintStart_toEndOf="@+id/progress_dot_5"
        app:layout_constraintTop_toTopOf="@+id/progress_dot_5" />
    <TextView
        android:id="@+id/track_date_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:text="(29 Dec. 2019, Friday)"
        android:padding="1dp"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/track_title_5"
        app:layout_constraintStart_toEndOf="@+id/track_title_5" />

    <TextView
        android:id="@+id/track_sub_title_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:padding="1dp"
        android:textSize="12sp"
        android:text="Order has been delivered successfully..!!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/track_title_5"
        app:layout_constraintTop_toBottomOf="@+id/track_title_5" />

</androidx.constraintlayout.widget.ConstraintLayout>