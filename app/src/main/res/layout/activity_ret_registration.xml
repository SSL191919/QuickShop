<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".retailerdata.RetRegisterActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/logo_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retailer Registration"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:fontFamily="serif"/>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:text="Register With"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_white_btn"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Phone Number"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/drawline"
                    android:drawableRight="@drawable/drawline"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="or"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_white_btn"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Email Address"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/x_Ret_Registration_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginRight="2dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/x_UserName_rt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft=
                        "@drawable/ic_account_circle_black_24dp"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:hint="Enter Your Name"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:fontFamily="serif"/>
                <EditText
                    android:id="@+id/x_UserMobile_rt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:hint="Enter Your Mobile"
                    android:inputType="phone"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:fontFamily="serif"/>
                <EditText
                    android:id="@+id/x_UserEmail_rt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:hint="Enter Your Email"
                    android:inputType="textWebEmailAddress"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:fontFamily="serif"/>
                <EditText
                    android:id="@+id/x_UserID_rt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_verified_user_black_24dp"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:hint="Enter ID(Voter, PAN, Licence)"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:fontFamily="serif"/>
                <EditText
                    android:id="@+id/x_UserPass1_rt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:fontFamily="serif"/>
                <EditText
                    android:id="@+id/x_UserPass2_rt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:hint="Enter Password Again.."
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:fontFamily="serif"/>

                <Button
                    android:id="@+id/x_UserRegisterBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_pinck_btn"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:text="Register here"/>


                <TextView
                    android:id="@+id/x_UserAlready"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already Register ? LogIn here..."
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textColor="#063e00"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/x_Ret_Login_OTP_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_margin="4dp"
                android:visibility="gone"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/x_codeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter OTP here..."
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="2dp"/>

                <Button
                    android:id="@+id/x_codeSubmitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_pinck_btn"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="2dp"
                    android:padding="2dp"
                    android:text="Submit"/>


                <TextView
                    android:id="@+id/w_code_not_found"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Don't get OTP? send Again..."
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textColor="#063e00"/>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>