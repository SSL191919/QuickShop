<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".communicate.ReportProblem">

    <TextView
        android:text="Send A Query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondary"
        android:layout_gravity="center_horizontal"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/rPuserNameTW"
        android:text="Your Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/rPuserNameEditTx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Enter your name"
        android:paddingLeft="20dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Your Query"
        android:textSize="30dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/reportMessageEditTx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write your message here..."
        />

    <Button
        android:id="@+id/reportBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="Send E-mail"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:singleLine="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/back_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textColor="@color/colorSecondary"
        android:text="&lt;&lt; Back"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

</LinearLayout>