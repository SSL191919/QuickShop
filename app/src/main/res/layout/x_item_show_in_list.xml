<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/x_item_list_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/x_ractangle_layout"
    android:elevation="3dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/x_item_list_Img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="3dp"
        android:background="@drawable/round_img_shape_black"
        android:padding="3dp"
        android:elevation="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/x_item_list_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/x_item_list_discr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="12dp" />

    </LinearLayout>

</LinearLayout>